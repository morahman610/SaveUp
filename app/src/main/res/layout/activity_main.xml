<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.MainActivity"
        android:gravity="center">

    <Spinner
            android:id="@+id/budgetDropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:onClick="addBudgetIntent"/>
    <TextView
            android:id="@+id/testText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="superman"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/text_field"/>
    <TextView android:id="@+id/text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/numPad"
            android:gravity="center"
            tools:text="50"
            tools:textSize="70sp"
            android:layout_marginBottom="70sp"/>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/numPad"
                    android:layout_gravity="center">
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOne"
                android:onClick="concatText"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTwo"
                android:layout_toRightOf="@id/buttonOne"
                android:onClick="concatText"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonThree"
                android:layout_toRightOf="@id/buttonTwo"
                android:onClick="concatText"/>
        <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonFour"
                android:layout_below="@id/buttonOne"
                android:onClick="concatText"/>
        <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonFive"
                android:layout_toRightOf="@id/buttonFour"
                android:layout_below="@id/buttonTwo"
                android:onClick="concatText"/>
        <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSix"
                android:layout_toRightOf="@id/buttonFive"
                android:layout_below="@id/buttonThree"
                android:onClick="concatText"/>
        <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSeven"
                android:layout_below="@id/buttonFour"
                android:onClick="concatText"/>
        <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEight"
                android:layout_toRightOf="@id/buttonSeven"
                android:layout_below="@id/buttonFive"
                android:onClick="concatText"/>
        <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNine"
                android:layout_toRightOf="@id/buttonEight"
                android:layout_below="@id/buttonSix"
                android:onClick="concatText"/>
        <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonZero"
                android:layout_below="@id/buttonEight"
                android:layout_toRightOf="@id/buttonSeven"
                android:onClick="concatText"/>
        <Button
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDecimal"
                android:layout_below="@id/buttonSeven"
                android:onClick="concatText"/>
        <Button
                android:text="clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonClear"
                android:layout_below="@id/buttonNine"
                android:layout_toRightOf="@id/buttonZero"
                android:onClick="concatText"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:paddingHorizontal="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSubmit"
                android:layout_below="@id/buttonZero"
                android:layout_centerHorizontal="true"
                android:onClick="amountSubmitOnClick"/>
    </RelativeLayout>

</RelativeLayout>